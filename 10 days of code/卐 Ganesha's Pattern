#include<bits/stdc++.h>
#define ll long long
#define S second
#define F first
using namespace std;

int main(){
    int n;
    cin>>n;
    for(int i=1;i<=n;i++){
        for(int j=1;j<=n;j++)
            if(i==(n+1)/2||(j==(n+1)/2)||(i<=n/2&&j==1)||(i>n/2&&j==n)||(i==1&&j>n/2)||(i==n&&j<=n/2))
                cout<<"*";
            else
                cout<<" ";
        cout<<"\n";
    }
	return 0;
}
