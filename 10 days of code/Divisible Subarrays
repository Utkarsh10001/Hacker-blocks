#include<iostream>
#include<unordered_map>
#define ll long long
#define ss second
using namespace std;
int main(){
    ll t;
    cin>>t;
    while(t--){
        int n;
        cin>>n;
        int a[n+1];
        a[0]=0;
        unordered_map<int,long long>m;
        for(int i=1;i<=n;i++){
            cin>>a[i];
            a[i]=((a[i-1]+a[i])%n+n)%n;
            }
        for(int i=0;i<=n;i++)
            m[a[i]]++;
        ll ans=0;
        for(auto i:m){
            ans+=(i.ss*(i.ss-1)/2);
        }
        cout<<ans<<"\n";
    }
	return 0;
}
